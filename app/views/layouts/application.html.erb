<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">

    <title></title>

    <%= stylesheet_link_tag 'active_admin' %>
    <%= javascript_include_tag 'modernizr-1.7.min' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">

      <header>
        <h1>Karting Admin</h1>
        <%= yield :header %>
        <nav>
          <%= link_to "Clients", admins_clients_path, :class => current_klass('clients') %>
          <%= link_to "Sales","#", :class => current_klass('sales') %>
        </nav>
      </header>

      <div id="title_bar">
        <h2><%= resource_class.human_name.titleize %></h2>
        <%#= link_to "New #{ resource_class.human_name }", new_resource_path, :class => "buttom" %>
      </div>

      <%= flash[:notice] %>

      <section>
        <%= yield %>
      </section>

      <aside>
        <%= yield :sidebar %>
      <aside>

      <footer>
        <%= yield :footer %>
      </footer>

    </div>
  </body>
</html>